#include<stdio.h>

void main()
{
    int hrs, rate;
    float gross, tax, net;
    printf("Enter Total Work Hours: ");
    scanf("%d", &hrs);
    printf("Enter Rate per hour: ");
    scanf("%d", &rate);
    gross = hrs * rate;
    tax = gross * 0.20;
    net = gross - tax;
    printf("Gross Pay: %.2f\n", gross);
    printf("Tax: %.2f\n", tax);
    printf("Net Pay: %.2f\n", net);
}
